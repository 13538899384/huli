<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@mipmap/icon_background"
    android:gravity="center"
    android:layout_height="match_parent">

    <RelativeLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@mipmap/icon_background_kuang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/start_assess"
            android:background="@mipmap/icon_start_assess"
            android:text="开始评估"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/assess_reference"
            android:background="@mipmap/icon_start_assess"
            android:text="评估参考"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/start_assess"
            android:layout_alignLeft="@+id/start_assess"
            android:layout_alignStart="@+id/start_assess" />

        <!--<de.hdodenhof.circleimageview.CircleImageView-->
            <!--android:src="@mipmap/icon_logo"-->
            <!--android:layout_width="150dp"-->
            <!--android:layout_height="150dp"-->
            <!--android:id="@+id/circleImageView"-->
            <!--android:layout_marginBottom="62dp"-->
            <!--android:layout_above="@+id/assess_reference"-->
            <!--android:layout_centerHorizontal="true" />-->
    </RelativeLayout>
</RelativeLayout>