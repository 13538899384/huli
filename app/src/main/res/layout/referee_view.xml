<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#1296db">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">
        <TextView
            android:id="@+id/referee_student1"
            android:text="张小小"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_width="85dp"
            android:layout_height="40dp" />
        <EditText
            android:id="@+id/referee_score1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:hint="请输入分数"
            android:inputType="number"
            android:background="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">
        <TextView
            android:id="@+id/referee_student2"
            android:text="李四"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_width="85dp"
            android:layout_height="40dp" />
        <EditText
            android:id="@+id/referee_score2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:hint="请输入分数"
            android:inputType="number"
            android:background="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">
        <Button
            android:id="@+id/referee_cancel"
            android:text="取消"
            android:textColor="#25AE90"
            android:background="@drawable/range_btn_style"
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/referee_submit"
            android:text="确认"
            android:textColor="#25AE90"
            android:background="@drawable/range_btn_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_height="40dp" />
    </LinearLayout>
</LinearLayout>