                            android:textSize="16sp"
                            android:text="无菌技术"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/practice_cwujun_gao"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:textSize="16sp"
                            android:text="高"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
