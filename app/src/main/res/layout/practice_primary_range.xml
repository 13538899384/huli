<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@mipmap/icon_background" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/practice_primary_scroll"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/practice_tv1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:text="操作前准备"/>
                <TextView
                    android:id="@+id/practice_tv2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/practice_tv1"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:text="评估"/>
                <TextView
                    android:id="@+id/practice_tv3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/practice_tv2"
                    android:layout_margin="10dp"
                    android:text="药物准备"/>
                <Button
                    android:id="@+id/practice_ll1"
                    android:orientation="vertical"
                    android:layout_width="80dp"
                    android:background="@drawable/login_btn_style"
                    android:layout_toRightOf="@+id/practice_tv3"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/practice_ll2"
                    android:orientation="vertical"
                    android:layout_width="80dp"
                    android:background="@drawable/login_btn_style"
                    android:layout_toRightOf="@+id/practice_ll1"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/practice_ll3"
                    android:orientation="vertical"
                    android:layout_width="80dp"
                    android:background="@drawable/login_btn_style"
                    android:layout_toRightOf="@+id/practice_ll2"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/practice_tv4"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:text="备无菌器械和无菌敷料"/>
                <TextView
                    android:id="@+id/practice_tv5"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/practice_tv4"
                    android:gravity="center"
                    android:text="备无菌溶液" />
                <TextView
                    android:id="@+id/practice_tv6"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:text="备操作部位和穿脱无菌手套"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/practice_tv5" />

                <Button
                    android:id="@+id/practice_ll4"
                    android:orientation="vertical"
                    android:layout_width="80dp"
                    android:background="@drawable/login_btn_style"
                    android:layout_toRightOf="@+id/practice_tv6"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/practice_ll5"
                    android:orientation="vertical"
                    android:layout_width="80dp"
                    android:background="@drawable/login_btn_style"
                    android:layout_toRightOf="@+id/practice_ll4"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/practice_ll6"
                    android:orientation="vertical"
                    android:layout_width="80dp"
                    android:background="@drawable/login_btn_style"
                    android:layout_toRightOf="@+id/practice_ll5"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/practice_tv7"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:text="整理并记录"/>
                <TextView
                    android:id="@+id/practice_tv8"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/practice_tv7"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:text="铺治疗巾"/>
                <TextView
                    android:id="@+id/practice_tv9"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/practice_tv8"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:text=""/>
                <Button
                    android:id="@+id/practice_ll7"
                    android:orientation="vertical"
                    android:layout_width="80dp"
                    android:background="@drawable/login_btn_style"
                    android:layout_toRightOf="@+id/practice_tv9"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/practice_ll8"
                    android:orientation="vertical"
                    android:layout_width="80dp"
                    android:background="@drawable/login_btn_style"
                    android:layout_toRightOf="@+id/practice_ll7"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/practice_ll9"
                    android:orientation="vertical"
                    android:layout_width="80dp"
                    android:background="@drawable/login_btn_style"
                    android:layout_toRightOf="@+id/practice_ll8"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/practice_primary_range_back"
                    android:background="@drawable/login_btn_style"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="@string/btn_mind_back"
                    android:layout_margin="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true" />

                <Button
                    android:id="@+id/practice_primary_range_out"
                    android:background="@drawable/login_btn_style"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="确定"
                    android:layout_margin="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/practice_primary_range_back"
                    android:layout_alignParentBottom="true" />

                <TextView
                    android:id="@+id/practice_primary_range_hit"
                    android:text="@string/tv_range_first_hit"
                    android:layout_toLeftOf="@+id/practice_primary_range_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/practice_primary_right"
        android:visibility="visible"
        android:background="@mipmap/icon_background"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="20dp"
                android:src="@drawable/icon_right"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:id="@+id/imageView3" />
        </LinearLayout>

        <RelativeLayout
            android:layout_alignBottom="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_below="@+id/practice_primary_hit"
                android:src="@drawable/icon_perple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:id="@+id/imageView4" />
            <Button
                android:id="@+id/practice_primary_next"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:text="下一步"
                android:background="@drawable/icon_next_or_know"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@drawable/mine_relayout_style"
                android:id="@+id/practice_primary_hit"
                android:layout_centerInParent="true"
                android:text="少侠，恭喜你排序正确，请进行评估和准备用物的考验"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>