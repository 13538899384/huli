<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="none" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <VideoView
            android:id="@+id/advanced_once_right"
            android:layout_margin="25dp"
            android:layout_width="match_parent"
            android:layout_height="150dp" />
        <TextView
            android:textSize="16sp"
            android:text="大侠，开始找错吧："
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <VideoView
            android:id="@+id/advanced_once_error"
            android:layout_margin="25dp"
            android:layout_width="match_parent"
            android:layout_height="150dp" />
        <TextView
            android:text="我是选择题："
            android:textSize="16sp"
            android:layout_margin="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="A"
                android:textSize="16sp"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="B"
                android:textSize="16sp"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="C"
                android:textSize="16sp"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="D"
                android:textSize="16sp"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/advanced_once_reference"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:text="查看解析"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/advanced_once_exit"
                android:text="退出"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/advanced_once_reference"
                android:background="@drawable/login_btn_style"
                android:layout_width="wrap_content"
                android:layout_margin="20dp"
                android:layout_height="40dp" />
            <Button
                android:id="@+id/advanced_once_next"
                android:text="下一道题"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_toLeftOf="@+id/advanced_once_exit"
                android:layout_below="@+id/advanced_once_reference"
                android:background="@drawable/login_btn_style"
                android:layout_width="wrap_content"
                android:layout_margin="20dp"
                android:layout_height="40dp" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>